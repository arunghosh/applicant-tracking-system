<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body style="text-align: center; margin: 0">
    <div id="menu">
        <div class="main-align" style="border-right: 1px solid #222;">
            @{Html.RenderAction("Menu", "Navigation", new { area = "" });}
            <div id="topNav">
                <div>
                    <span class="ft-l">
                        @UserSession.CurrentUserName
                    </span>
                    <div class="d-ib ft-r">
                        <div class="notify-icon" data-url="/user/settings">
                            <span class="ntfy-trig ntfy-view">
                                <i class="icon-cog icon-white"></i>
                            </span>
                            <div class="ntfy-ctnr setting">
                                <div class="arrow"></div>
                                <ul class="ntfy-lst">
                                    <li>
                                        <a class="ntfy-lnk new-obj" data-method="get" data-title="Update Password" data-url="/user/password">Change Password</a>
                                    </li>
                                    <li>
                                        <a class="ntfy-lnk" href="/home/logout">Signout</a>
                                    </li>
                                </ul>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
                @{Html.RenderAction("Index", "Notification");}
            </div>
        </div>
    </div>
    <div>
        <div class="main-align" id="mainCnt">
            @RenderBody()
        </div>
        @{Html.RenderPartial("Overlay");}
        @{Html.RenderPartial("DialogView");}
    </div>
    <div class="footer">
        &copy; 2013-2014 Copyright RawData Technologies
    </div>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    @Scripts.Render("~/bundles/jqueryAndRdt")
    @RenderSection("Scripts", false)
</body>
</html>
