@model List<Rdt.CourseFinder.Entities.Requirement>

<table class="edit-table" id="requirement">
    @{var cnt = 1;}
    <tr>
        <th>#</th>
        <th>Category</th>
        <th>Nos</th>
        <th>Date</th>
        <th><div style="width:255px;"></div> </th>
    </tr>
    @foreach (var req in Model)
    {
        <tr class="edit-ctnr">
            <td><div class="slCnt">@(cnt++)</div></td>
            <td class="field">@req.Category</td>
            <td class="value">@req.Count</td>
            <td>@DisplayHelper.DateTime(req.CreatedOn, DateTypes.DateOnly)</td>
            <td><a class="edit-line btn-simple" data-id="@req.RequirementId"><i class="icon-edit"></i></a></td>
        </tr>
    }
    <tr class="edit-ctnr">
        <td></td>
        <td colspan="3"><a class="edit-line btn-gray add-btn"><i class="icon-plus-sign"></i>Add new requirement</a></td>
        <td></td>
    </tr>
</table>
<script src="~/Scripts/_time.js"></script>

@{Html.RenderPartial("_ListEdit", "requirement");}
