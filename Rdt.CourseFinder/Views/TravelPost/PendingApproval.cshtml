@model List<Rdt.CourseFinder.Entities.Candidate>

<h5>Please approve the travel postpone requests</h5>
<table class="table table-hover table-bordered" id="travelPostList">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Passport #</th>
        <th>Boarding</th>
        <th>Travel Date</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(Model.IndexOf(item) + 1)</td>
            <td><a class="new-obj" data-title="Details" data-url="/Candidate/Details/@item.CandidateId" data-method="get">@item.Name</a></td>
            <td>@item.Passport</td>
            <td>@item.BoardingCity</td>
            <td>@DisplayHelper.DateTime(item.TravelDate.Value, DateTypes.Medium)</td>
            <td data-id="@item.CandidateId" style="min-width:60px;">
                <a class="btn-primary update-btn" data-status="@((byte)TravelPostStates.Approved)" title="Approve Request"><i class="icon-ok icon-white"></i></a>
                <a class="btn update-btn" data-status="@((byte)TravelPostStates.Rejected)" title="Reject Request"><i class="icon-remove"></i></a>
            </td>
        </tr>    
    }
</table>

