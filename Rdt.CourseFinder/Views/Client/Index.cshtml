@model List<Rdt.CourseFinder.Entities.Company>

@{
    ViewBag.Title = "CompanyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul id="subMenu">
    <li>
    <a class="new-obj" data-title="Add Company" data-method="get" data-url="/Client/Edit"><i class="icon-plus-sign"></i> New Company</a>
    </li>
</ul>
<div class="p20">
    <table class="table table-hover table-bordered">
        <tr>
            <th>#</th>
            <th>Company Name</th>
            <th>Location</th>
            <th>Added On</th>
            <th> </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(Model.IndexOf(item) + 1)</td>
                <td><a href="/Client/Details/@item.CompanyId">@item.CompanyName</a></td>
                <td>@item.Country</td>
                <td>@DisplayHelper.DateTime(item.CreatedOn, DateTypes.DateOnly)</td>
                <td><a class="new-obj btn-gray" data-title="Edit Company" data-method="get" data-url="/Client/Edit/@item.CompanyId"><i class="icon-edit"></i>Edit</a></td>
            </tr>
        }
    </table>
</div>


@section Scripts{}
