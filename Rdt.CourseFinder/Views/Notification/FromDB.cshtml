@model List<Rdt.CourseFinder.Entities.Notification>
@if(Model.Any())
{
<h5>Notifications</h5>
<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Date</th>
        <th>Candidate</th>
        <th>Message</th>
        @*<th></th>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(Model.IndexOf(item) + 1)</td>
            <td class="bld">@DisplayHelper.DateTime(item.CreatedOn, DateTypes.Medium)</td>
            <td><a class="new-obj" data-title="Details" data-url="/Candidate/Details/@item.CandidateId" data-method="get">@item.CandidateName</a></td>
            <td>@item.Message</td>
            @*<td><a class="btn-primary ntfy-read" data-id="@item.CandidateId">mark as read</a></td>*@
        </tr>
    }
</table>
}


